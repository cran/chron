useDynLib("chron")

import("stats")

importFrom("graphics", "Axis", "axis", "barplot", "hist", "par", "plot",
           "plot.default") 

export(".Holidays",
       "as.chron",
       "chron",
       "dates", "day.of.week", "days",
       "hours",
       "is.chron", "is.holiday", "is.weekend",
       "leap.year",
       "minutes", "month.day.year",
       "seconds", "seq.dates",
       "times",
       "years")

## Grr ...
export("year.expand",
       "year.strict")

S3method("as.chron", "POSIXt")
S3method("as.chron", "Date")
