S3method("weekdays", "default")

S3method("as.data.frame", "chron")
S3method("format", "chron")
S3method("print", "chron")
if(getRversion() >= "2.8.0")
    S3method("xtfrm", "chron")

S3method("Math", "dates")
S3method("Ops", "dates")
S3method("Summary", "dates")
S3method("[<-", "dates")
