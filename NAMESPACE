S3method("as.data.frame", "dates")
S3method("c", "dates")
S3method("cut", "dates")
S3method("format", "dates")
S3method("print", "dates")
if(getRversion() >= "2.8.0")
    S3method("xtfrm", "dates")

S3method("Axis", "times")
